						<splunk.url>${ch.splunk.url}</splunk.url>
						<splunk.token>${ch.splunk.token}</splunk.token>
						<splunk.index>${ch.splunk.index}</splunk.index>
						<splunk.source>${ch.splunk.source}</splunk.source>
						<anypoint.platform.config.analytics.agent.enabled>${ch.anypoint.platform.config.analytics.agent.enabled}</anypoint.platform.config.analytics.agent.enabled>
					</properties>
					</cloudHubDeployment>
				</configuration>
				<executions>
					<execution>
						<id>deploy</id>
						<phase>deploy</phase>
						<goals>
							<goal>deploy</goal>
						</goals>
					</execution>
