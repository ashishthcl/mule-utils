						<environment>${ch.environment}</environment>
						<applicationName>${ch.applicationName}</applicationName>
					
					<properties>
						<mule.env>${ch.mule.env}</mule.env>
						<mule.key>${ch.mule.key}</mule.key>
						<max.retry.count>1</max.retry.count>
						<retry.interval>1000</retry.interval>
						<api.name>${api.name}</api.name>
						<proxy.host>${proxy.host}</proxy.host>
						<port>${port}</port>
						<service>${service}</service>
						<mssql.reconnect.count>1</mssql.reconnect.count>
						<anypoint.platform.analytics_base_uri>${ch.anypoint.platform.analytics_base_uri}</anypoint.platform.analytics_base_uri>
